.text
    &-center
        text-align center

    &-left
        text-align left

    &-right
        text-align right

    &-white
        color white

.text-main-color
    color mainColor

.fw-600
    font-weight 600

.link
    color mainColor

    &:hover
        text-decoration underline
        color mainColor

    &_white
        &, &:hover
            color: white;

    &_disabled
        &, &:hover
            color gray
            text-decoration unset


.cursor-pointer
    cursor pointer

.input_null
    background none
    border none
    padding 0

    &:focus
        outline none


.cross
    display block
    position relative
    height 50px
    width 50px
    cursor pointer

    &:before, &:after
        top 50%
        left 10%
        content ''
        background-color black
        position absolute
        display block
        width 90%
        height 2px
        transform rotate(45deg)

    &:after
        transform rotate(-45deg)

    &_sm
        height 25px
        width 25px
    &_xsm
        height 15px
        width 15px

    &_md
        height 35px
        width 35px

.m2, .p
    font-size .6em
    position absolute
    top 0
    right 0

.m2
    right -3px

.p
    left 0
    font-size .7em
    right auto
